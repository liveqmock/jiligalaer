/**
 * 获取当前日期
 * @returns {String}
 */
function getCurrDate(){
	var date = new Date();
	var yy=date.getFullYear();
	var mm=date.getMonth()+1;
	var dd=date.getDate();
	var dateStr=yy+'-';
	if(mm<10){
		dateStr = dateStr + '0' + mm + '-';
	}else{
		dateStr = dateStr + mm + '-';
	}
	if(dd<10){
		dateStr = dateStr + '0' + dd;
	}else{
		dateStr = dateStr + dd;
	}
	return dateStr;
}

